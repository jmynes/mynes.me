{
  "name": "mynes-me",
  "version": "1.0.0",
  "description": "Static portfolio with switchable visual themes",
  "scripts": {
    "build:css": "sass src/scss:dist/css --style=compressed --no-source-map",
    "build:js": "cp -r src/js/* dist/js/",
    "build": "npm run build:css && npm run build:js",
    "watch:css": "sass src/scss:dist/css --watch",
    "watch": "npm-run-all --parallel watch:css",
    "serve": "browser-sync start --server --files 'dist/**/*' 'index.html'",
    "dev": "npm-run-all --parallel watch serve",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.js": "biome check --write"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "browser-sync": "^3.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "sass": "^1.69.0"
  }
}
